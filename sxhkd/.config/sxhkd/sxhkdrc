#
# wm independent hotkeys
#

# terminal emulator
super + Return
	exec kitty

# program launcher
super + space
	exec rofi -show run

# misc. programs
super + c
	exec chromium
super + i
	exec chromium --incognito

super + p
	exec passmenu
XF86Calculator
	kitty -e R

#
# screenshots 
#

# capture entire screen, save to file + copy to clipboard
super + s
	maim | tee ~/s/(date +"%FT%T").png | xclip -selection clipboard -t image/png
# same thing, but just a selection of the screen
super + shift + s
	maim -s | tee ~/s/(date +"%FT%T").png | xclip -selection clipboard -t image/png

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#power control

#poweroff
super + shift + F4
	sudo systemctl poweroff
#sleep
super + F1
	sudo systemctl suspend

# volume and media keys

# Increase volume
XF86AudioRaiseVolume
	amixer set Master 5%+
# Decrease volume
XF86AudioLowerVolume
	amixer set Master 5%-
# Mute volume
XF86AudioMute
	amixer set Master 0
#play/pause
control + XF86AudioMute
	playerctl play-pause
#previous
control+XF86AudioLowerVolume
	playerctl previous
#next
control+XF86AudioRaiseVolume
	playerctl next
#switch to headphones
super + XF86AudioMute
	pactl set-sink-port 0 analog-output-headphones; and pactl set-sink-volume 0 20%
#switch to speakers
super + shift + XF86AudioMute
	pactl set-sink-port 0 analog-output-lineout; and pactl set-sink-volume 0 100%

# brightness

# Increase brightness
XF86MonBrightnessUp
	sudo xbacklight -inc 10
# Decrease brightness
XF86MonBrightnessDown
	sudo xbacklight -dec 10

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {shift + ,shift + alt +}q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# switch between floating and tiled mode
super + {f,shift + f}
	bspc node -t {floating,tiled}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# resize windows
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

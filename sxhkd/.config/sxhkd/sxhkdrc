#
# wm independent hotkeys
#

# terminal emulator
super + Return
	exec termite

# program launcher
super + space
	exec rofi -show run

# misc. programs
super + c
	exec google-chrome-stable
super + i
	exec google-chrome-stable --incognito
super + p
	exec passmenu

# take a screenshot with scrot and save it to home directory
# whole screen
super + s
	scrot
# selection - for some reason it only works if you sleep for a bit first
super + shift + s
	sleep 0.2 && scrot -s

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#power control

#poweroff
super + shift + F4
	sudo systemctl poweroff
#sleep
super + F1
	sudo systemctl suspend

# volume and media keys

# Increase volume
XF86AudioRaiseVolume
	amixer set Master 5%+
# Decrease volume
XF86AudioLowerVolume
	amixer set Master 5%-
# Mute volume
XF86AudioMute
	amixer set Master 0
#play/pause
control + XF86AudioMute
	playerctl play-pause
#previous
control+XF86AudioLowerVolume
	playerctl previous
#next
control+XF86AudioRaiseVolume
	playerctl next

# brightness

# Increase brightness
XF86MonBrightnessUp
	sudo xbacklight -inc 10
# Decrease brightness
XF86MonBrightnessDown
	sudo xbacklight -dec 10

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {shift + ,shift + alt +}q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# switch between floating and tiled mode
super + {f,shift + f}
	bspc node -t {floating,tiled}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# resize windows
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}
